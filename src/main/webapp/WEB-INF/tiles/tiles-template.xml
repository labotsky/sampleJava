<tiles-definitions>
	<definition name="common" template="/WEB-INF/layout/classic.jsp">
	    <put-attribute name="header" value="/WEB-INF/layout/header.jsp" />
	    <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp" />
	</definition>
	
	<definition name="home" extends="common">
	    <put-attribute name="title" value="Sample App" />
	    <put-attribute name="body" value="/WEB-INF/views/static_pages/home.jsp" />
	</definition>
	
	<definition name="login" extends="common">
	    <put-attribute name="title" value="Sign in" />
	    <put-attribute name="body" value="/WEB-INF/views/static_pages/login.jsp" />
	    <put-attribute name="footer" value="" />
	</definition>
	
	<definition name="help" extends="common">
	    <put-attribute name="title" value="Help" />
	    <put-attribute name="body" value="/WEB-INF/views/static_pages/help.jsp" />
	</definition>
	
	<definition name="about" extends="common">
	    <put-attribute name="title" value="About" />
	    <put-attribute name="body" value="/WEB-INF/views/static_pages/about.jsp" />
	</definition>
	
	<definition name="contact" extends="common">
	    <put-attribute name="title" value="Contact" />
	    <put-attribute name="body" value="/WEB-INF/views/static_pages/contact.jsp" />
	</definition>
</tiles-definitions>